<div class="container">
    <!-- Content here -->

    <!--Card-->
    <div class="row col-12 justify-content-center centered" id="login-card">


        <!--Card-->
        <div class="card col-lg-4 col-6 col-sm-8">

            <!--Card image-->
            <div class="view gradient-scooter card-gradient-top">
                <div class="mask flex-center">
                    <h1 class="white-text">Login</h1>
                </div>
            </div>

            <!--Card content-->
            <div class="card-body">

                <!--Text-->
                <form>

                    <div class="md-form">
                        <i class="far fa-envelope prefix grey-text"></i>
                        <input type="text" id="defaultForm-email" class="form-control">
                        <label for="defaultForm-email">Your email</label>
                    </div>

                    <div class="md-form">
                        <i class="fa fa-lock prefix grey-text"></i>
                        <input type="password" id="defaultForm-pass" class="form-control">
                        <label for="defaultForm-pass">Your password</label>
                    </div>

                    <div class="text-center">
                        <button class="btn btn-primary">Login</button>
                    </div>
                </form>

            </div>

        </div>
        <!--/.Card-->


    </div>

</div>