<div class="container">

    <div class="row col-12 justify-content-center">

        <table class="table">
            <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Role</th>
                <th>Edit</th>
            </tr>
            </thead>
            <tbody>
            <% if (typeof records !== 'undefined') { %>
            <% _.each(records, function (record) { %>
            <tr>
                <td><%= record.name %></td>
                <td><%= record.email %></td>
                <td><%= record.role %></td>
                <td><a href="/user/edit/<%= record.id_user %>"><i class="fas fa-edit fa-lg"></i></a><a
                            href="/user/destroy/<%= record.id_user %>"><i class="fas fa-times fa-lg"></i></a></td>
                <% }) %>
            </tr>
            <% } %>
            </tbody>
        </table>

    </div>

</div>