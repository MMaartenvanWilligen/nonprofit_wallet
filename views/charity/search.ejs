<div class="container">
    <div class="row col-12 justify-content-center">
        <div class="col-lg-10 col-sm-12">
            <form action="/charity/search" method="post">
                <div class="input-group">
                    <div class="input-group-btn search-panel">
                        <% if (typeof categories !== 'undefined') { %>
                        <select name="category" class="btn btn-primary dropdown-toggle">

                            <option value="" name="category">Category</option>

                            <% _.each(categories, function (record) { %>
                            <option value="<%= record.id_category %>" name="category"><%= record.category %></option>
                            <% }) %>
                        </select>
                        <% } %>
                    </div>
                    <input type='hidden' name='_csrf' value='<%= _csrf %>'>
                    <input type="text" class="form-control" name="searchString" placeholder="Search term...">
                    <span class="input-group-btn">
                    <button class="btn btn-primary" type="submit"><i class="fas fa-search"></i></button>
                </span>
                </div>
            </form>
        </div>

    </div>
</div>
